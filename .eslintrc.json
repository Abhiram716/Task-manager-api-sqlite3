{
  "root":true,
	"env": {
			"es2021": true,
			"node": true
	},
	"extends": [
			"airbnb-base",
			"plugin:import/recommended",
      "plugin:eslint-comments/recommended"
	],
	"parserOptions": {
			"ecmaVersion": 12,
			"sourceType": "module"
	},
	"rules": {
		"import/order": [
		"error",
		{
			"newlines-between":"always",
				"alphabetize":
				{
					"order":"asc",
					"caseInsensitive":true
				}
			}
		],
    "eslint-comments/disable-enable-pair": "off",
    "no-underscore-dangle": "off",
    "sort-keys": [
      "error",
      "asc",
      {
        "natural": true
      }
    ],
    "import/extensions": ["error","always"]
	}
}
